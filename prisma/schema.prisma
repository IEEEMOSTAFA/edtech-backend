generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============= ENUMS =============
enum UserRole {
  STUDENT
  TUTOR
  ADMIN
}

enum BookingStatus {
  CONFIRMED
  COMPLETED
  CANCELLED
}

// ============= MODELS =============

// User Model - For all users (students, tutors, admins)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  
  // Relations
  tutorProfile  TutorProfile?
  bookingsAsStudent  Booking[] @relation("StudentBookings")
  bookingsAsTutor    Booking[] @relation("TutorBookings")
  reviews           Review[]
  availabilities    Availability[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// TutorProfile Model - Only for tutors
model TutorProfile {
  id          String  @id @default(cuid())
  userId      String  @unique
  bio         String?
  hourlyRate  Float
  experience  Int     // years of experience
  rating      Float   @default(0)
  
  // Relations
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories  Category[]
  reviews     Review[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Category Model - Subject categories
model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  description String?
  
  // Relations
  tutors    TutorProfile[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Booking Model - Sessions between students and tutors
model Booking {
  id          String         @id @default(cuid())
  studentId   String
  tutorId     String
  sessionDate DateTime
  duration    Int            // in minutes
  status      BookingStatus  @default(CONFIRMED)
  notes       String?
  
  // Relations
  student     User           @relation("StudentBookings", fields: [studentId], references: [id], onDelete: Cascade)
  tutor       User           @relation("TutorBookings", fields: [tutorId], references: [id], onDelete: Cascade)
  review      Review?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Review Model - Student reviews for tutors
model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique
  tutorId   String
  studentId String
  rating    Int      // 1-5 stars
  comment   String?
  
  // Relations
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  tutor     TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Availability Model - Tutor time slots
model Availability {
  id        String   @id @default(cuid())
  tutorId   String
  dayOfWeek Int      // 0-6 (Monday-Sunday)
  startTime String   // "09:00" format
  endTime   String   // "17:00" format
  isAvailable Boolean @default(true)
  
  // Relations
  tutor     User     @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
